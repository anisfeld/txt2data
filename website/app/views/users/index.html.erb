<div class="row">

  <div class="my-3">
    <%= link_to "Add a New User", "/users/new", class: 'btn btn-primary' %>
  </div>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Password</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% User.all.order('last_name').each do |user| %>
        <tr>
          <td><%= user.first_name %> <%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.password %></td> 
          <td>
            <%= link_to "[View]", "/users/#{user.id}" %>
            <%= link_to "[Edit]", "/users/#{user.id}/edit" %>
            <%= link_to "[Delete]", "/users/#{user.id}", method: 'delete' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>